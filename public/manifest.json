{
	"manifest_version": 3,
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"name": "Mockly",
	"version": "1.0.0",
	"description": "Intercept and mock HTTP requests",
	"permissions": [
		"webRequest",
		"storage",
		"scripting",
		"activeTab",
		"unlimitedStorage"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "assets/background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "index.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"128": "icons/icon128.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["assets/content.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/injected.js"],
			"matches": ["<all_urls>"]
		}
	]
}
